<% provide(:pageinfo, 'Login') %>
<div class="row">
<div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
<%= form_for(:session,url: login_path) do |f| %>
<%= f.label :username %>
<%= f.text_field :username,class: 'form-control' %>
<br>
<%= f.label :password %>
<%= f.password_field :password,class: 'form-control' %>
<br>
  <br>
<%= f.submit 'Login', class: 'btn btn-md', style: ' background-color: #2E2649; color: white; border-radius: 22.4px;' %>
<% end %>

</div>
</div>