



<%= form_with(model: micropost, local: true) do |form| %>
  <% if micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(micropost.errors.count, "error") %> prohibited this micropost from being saved:</h2>

      <ul>
      <% micropost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :micropost_title,class: 'form-control' %>
  </div>
  <br>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :body, id: :micropost_body,class: 'form-control' %>
  </div>

  

  <div class="field">
    <%= form.label :document %>
    <%= form.file_field :document, as: :file %>
  </div>

  <div class="actions">
    <%= form.submit yield(:todo), class: 'btn btn-md', style: ' background-color: #2E2649; color: white; border-radius: 22.4px;' %>
    <%= link_to 'Back', microposts_path, class: "btn btn-md" , style: 'float: right; border: 1px solid grey; color: #2E2649; border-radius: 22.4px; ' %>
  </div>

<% end %>
